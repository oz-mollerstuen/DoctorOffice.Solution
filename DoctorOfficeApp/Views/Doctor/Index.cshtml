@{
  Layout = "_Layout";
}
@using DoctorOffice.Models

<div class="text-center">
  <h1>@Model.name</h1>
  <a href="/">
    <h3>View all doctors</h3>
  </a>
  <form action="/doctor/delete/@Model.doctor_id" method="post">
    <button type="submit" class="btn btn-danger">Fire @Model.name</button>
  </form>
  <br>
</div>
<div class="text-center">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-4">
      <form action="/patient/@Model.doctor_id/add" method="post">
        <h5>Add A Patient</h5>
        <label for="drop_name">Name</label><br>
        <select name="drop_name" id="drop_name" required>
          <option value="" disabled selected>Patient List</option>
          @foreach (Patient pat in ViewBag.Patients)
          {
            <option value="@pat.patient_id">@pat.name</option>
          }
        </select>
        <br><br>
        <button type="submit" class="btn btn-info">Add</button>
      </form>
    </div>
    <div class="col-4">
      <form action="/specialty/@Model.doctor_id/add" method="post">
        <h5>Add A Specialty</h5>
        <label for="drop_name">Name</label><br>
        <select name="drop_name" id="drop_name" required>
          <option value="" disabled selected>Specialty List</option>
          @foreach (Specialty spec in ViewBag.Specialty)
          {
            <option value="@spec.specialty_id">@spec.name</option>
          }
        </select>
        <br><br>
        <button type="submit" class="btn btn-info">Add</button>
      </form>
    </div>
    <div class="col-2"></div>
  </div>
  <hr>
  <h2>Patients:</h2>
    @foreach (Patient pat in ViewBag.DocPatients)
    {
    <div class="mb-2">
        <div class="card w-25 m-auto bg-light">
          <div class="card-body">
            <h1 class="card-title">
              @pat.name
            </h1>
            <p class="card-text">Birthday: @pat.birthday</p>
            <form action="/patient/delete/@pat.patient_id/@Model.doctor_id" method="post">
              <button type="submit" class="btn btn-danger">X</button>
            </form>
          </div>
        </div>
    </div>
    }
  <hr>
  <h2>Special Specialties:</h2>
  <ul class="list-group w-25 m-auto">
    @foreach (Specialty spec in ViewBag.DocSpecialty)
    {
      <li class="list-group-item mb-3 bg-light">
        @spec.name
        <br>
        <form action="/specialty/delete/@spec.specialty_id/@Model.doctor_id" method="post">
          <button type="submit" class="btn btn-danger">X</button>
        </form>
      </li>
    }
  </ul>
</div>